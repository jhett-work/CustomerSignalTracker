modules = ["python-3.11"]

[nix]
channel = "stable-24_05"
packages = ["glibcLocales", "libyaml", "wget"]

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "CDP Signal Scanner"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "run_cdp_scanner"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Web App"

[[workflows.workflow]]
name = "CDP Signal Scanner"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "python -m cdp_signal_scanner.main --companies \"Adobe,Microsoft,Shopify\" --output signals.csv"

[[workflows.workflow]]
name = "run_cdp_scanner"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "python -m cdp_signal_scanner.main --companies \"Adobe,Microsoft,Shopify\" --output signals.csv"

[[workflows.workflow]]
name = "Web App"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "python run_web_app.py"
waitForPort = 5000

[deployment]
run = ["sh", "-c", "python -m cdp_signal_scanner.main --companies \"Adobe,Microsoft,Shopify\" --output signals.csv"]

[[ports]]
localPort = 5000
externalPort = 80
